@model UpdateReportDTO

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center mb-4">Delete Report</h1>

<h3 class="text-center">Are you sure you want to delete this?</h3>
<div class="card shadow-sm" style="border-radius: 10px; margin-top:20px;">
    <div class="card-body">
        <h4 class="card-title">Report Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ReportReason)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ReportReason)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ReportedAt)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ReportedAt)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.UserId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.UserId)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ProblemId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ProblemId)
            </dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group text-center">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        min-height: 280px;
    }

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .btn-danger:hover {
        color: #fff;
        background-color: #c82333;
        border-color: #bd2130;
    }

    .btn-secondary:hover {
        color: #fff;
        background-color: #5a6268;
        border-color: #545b62;
    }
</style>

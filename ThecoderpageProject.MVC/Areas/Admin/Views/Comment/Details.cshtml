@model UpdateCommentDTO

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center mb-4">Comment Detail</h1>

<div class="card mb-3 shadow-sm" style="width: 70%; margin-left: auto; margin-right: auto; margin-top:50px; border-radius:10px;">
    <!-- Başlık, Avatar ve Kullanıcı Bilgileri -->
    <div class="card-header d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <img src="/images/avatar.png" alt="Comment Owner Avatar" class="rounded-circle" width="40" height="40" style="margin-right:10px;">
            <h6 class="mb-0">@Model.UserName</h6>
        </div>
        <div class="d-flex align-items-center">
            <h6>Comment Id : @Model.Id</h6>
        </div>
    </div>

    <!-- Açıklama ve Kullanıcı Bilgileri -->
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <h5 class="card-title">Comment :</h5>
            <small class="text-muted">Date: @Model.CreatedAt.ToShortDateString()</small>
        </div>
        <p class="card-text">@Model.Content</p>
        <p class="card-text"><strong>Problem Id:</strong> @Model.ProblemId</p>
        <a href="@Url.Action("Details", "Problem", new { area = "Admin", id = @Model.ProblemId })" class="btn btn-outline-primary">
            <i class="bi bi-eye"></i> Problemi Görmek İçin Tıklayınız
        </a>
    </div>
</div>

<div class="d-flex justify-content-center text-center mt-3 m-3">
    <div class="me-3" style="pa:0 25px;">
        <a style="padding:5px 50px;" asp-area="Admin" asp-controller="Comment" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-secondary">Update</a>
    </div>
    <div>
        <a style="padding:5px 15px;" asp-area="Admin" asp-controller="Comment" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

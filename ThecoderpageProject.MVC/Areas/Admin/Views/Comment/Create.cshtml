@model CreateCommentDTO

@{
    ViewData["Title"] = "Create";
}

@if (TempData["Errors"] != null)
{
    <div class="alert alert-danger">
        @TempData["Errors"]
    </div>
}
<h1 class="text-center mb-4">Create New Comment</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-secondary text-white">
                <h4 class="mb-0">Comment Details</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Content" class="control-label"></label>
                        <input asp-for="Content" class="form-control" placeholder="Enter comment content" />
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="CreatedAt" class="control-label"></label>
                        <input asp-for="CreatedAt" class="form-control" />
                        <span asp-validation-for="CreatedAt" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ProblemId" class="control-label"></label>
                        <input asp-for="ProblemId" class="form-control" />
                        <span asp-validation-for="ProblemId" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Create" class="btn btn-secondary" style="padding:5px 30px;" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

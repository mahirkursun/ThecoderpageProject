<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Thecoderpage</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    <header>
        <div class="fixed-nav" style="box-shadow: 0px 0.1px 8px 1px rgb(141, 141, 157);">
             <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
                <div class="container-fluid ">
                    <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index" style="font-family: Segoe 'Segoe Print'; font-weight: bold; font-size: x-large;">

                        <img src="~/images/logo.png" style="height: 30px; width: 30px; margin-right: 10px;" />
                        Thecoderpage
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar" aria-controls="adminNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="adminNavbar">
                        <ul class="navbar-nav ms-auto">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <form asp-area="Identity" asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                                        <button type="submit" class="nav-link btn btn-link" style="border: none; background: none; font-weight: bold; font-size:large; font-family:Segoe 'Segoe Print'; ">Çıkış Yap</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
       
    </header>

    <div class="d-flex flex-grow-1" style="padding-top:3px;">
        <!-- Sol tarafta duran navbar -->
        <div class="navbar navbar-expand-sm navbar-light bg-light border-end flex-column" style="width: 12%; min-height: 93.2vh;  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
            <nav>
                <div class="container-fluid flex-column" style="margin-top:-5px;">
                    <ul class="navbar-nav flex-column" style="font-size: 17px; width: 12vw;">
                        <li class="nav-item border-bottom">
                            <a class="nav-link text-dark d-flex align-items-center justify-content-start py-3" asp-area="Admin" asp-controller="Home" asp-action="Index" style="margin-left:50px;">
                                <i class="bi bi-house me-2"></i> Anasayfa
                            </a>
                        </li>
                        <li class="nav-item border-bottom">
                            <a class="nav-link text-dark d-flex align-items-center justify-content-start py-3" asp-area="Admin" asp-controller="Problem" asp-action="Index" style="margin-left:50px;">
                                <i class="bi bi-exclamation-circle me-2"></i> Problems
                            </a>
                        </li>
                        <li class="nav-item border-bottom">
                            <a class="nav-link text-dark d-flex align-items-center justify-content-start py-3" asp-area="Admin" asp-controller="Comment" asp-action="Index" style="margin-left:50px;">
                                <i class="bi bi-chat-left-text me-2"></i> Comments
                            </a>
                        </li>
                        <li class="nav-item border-bottom">
                            <a class="nav-link text-dark d-flex align-items-center justify-content-start py-3" asp-area="Admin" asp-controller="User" asp-action="Index" style="margin-left:50px;">
                                <i class="bi bi-person me-2"></i> Users
                            </a>
                        </li>
                        <li class="nav-item border-bottom">
                            <a class="nav-link text-dark d-flex align-items-center justify-content-start py-3" asp-area="Admin" asp-controller="Category" asp-action="Index" style="margin-left:50px;">
                                <i class="bi bi-tags me-2"></i> Categories
                            </a>
                        </li>
                        <li class="nav-item border-bottom">
                            <a class="nav-link text-dark d-flex align-items-center justify-content-start py-3" asp-area="Admin" asp-controller="Report" asp-action="Index" style="margin-left:50px;">
                                <i class="bi bi-flag me-2"></i> Reports
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center justify-content-start py-3" asp-area="Admin" asp-controller="Like" asp-action="Index" style="margin-left:50px;">
                                <i class="bi bi-hand-thumbs-up me-2"></i> Likes
                            </a>
                        </li>
                    </ul>



                </div>
            </nav>
        </div>


        <style>
            .nav-item {
                transition: background-color 0.3s ease, color 0.3s ease;
            }

                .nav-item:hover {
                    background-color: #007bff;
                    color: white !important;
                    border-radius: 10px;
                }

                .nav-item i {
                    transition: transform 0.3s ease;
                }

                .nav-item:hover i {
                    transform: scale(1.2);
                }
        </style


        <!-- Sağda yer alan içerik -->
        <div class="container mt-4" style="padding-bottom: 100px;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>





    </div>
    <div class="position-relative" style="color:aliceblue;">
        @Html.Partial("Footer/_Footer_PV")
    </div>
    

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

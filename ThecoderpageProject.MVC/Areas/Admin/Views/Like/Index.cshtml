@model IEnumerable<LikeVM>

@{
    ViewData["Title"] = "Likes";
}

<h1 class="text-center mb-4">Likes</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm" style="border-radius: 10px;">
                

                
                <div class="card-body position-relative">

                    <!-- Kullanıcı Adı ve Avatar -->
                    <div class="d-flex align-items-center position-absolute" style="top: 10px; left: 10px;">
                        <img src="/images/avatar.png" alt="User Avatar" class="rounded-circle" width="40" height="40">
                        <span class="ms-2 text-muted">@Html.DisplayFor(modelItem => item.UserName)</span>
                    </div>


                    <!-- İçerik Container -->
                    <div class="container mt-5" style="padding:20px;  background-color:whitesmoke; border-radius:10px; min-height:70px;">
                        <!-- Like Başlığı -->
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <h5 class="card-title text-primary">
                                <i class="bi bi-hand-thumbs-up"></i> @item.ProblemTitle
                            </h5>
                        </div>
                    </div>
                    <a asp-controller="Problem" asp-action="Details" asp-route-id="@item.ProblemId" style="text-decoration:none; color:cadetblue; margin:5px 10px;">
                        Probleme git
                    </a>
                </div>
               
            </div>
        </div>
    }
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        min-height: 80px;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

    .card-title {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .bi-trash:hover {
        color: #dc3545;
        transform: scale(1.1);
        transition: transform 0.2s ease, color 0.2s ease;
    }
</style>

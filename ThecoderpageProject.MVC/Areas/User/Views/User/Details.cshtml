@model UpdateUserDTO

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center mb-4">Kullanıcı Detay</h1>
<div class="card mb-3 shadow-sm" style="width: 50%; margin-left: auto; margin-right: auto; margin-top:50px; border-radius:10px;">
    <!-- Header with Avatar and User Info -->
    <div class="card-header d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <img src="/images/avatar.png" alt="User Avatar" class="rounded-circle" width="40" height="40" style="margin-right:10px;">
            <h6 class="mb-0">@Model.UserName</h6>
        </div>
        <div class="d-flex align-items-center">
            <h6>Kullanıcı Id: @Model.Id</h6>
        </div>
    </div>

    <!-- User Details -->
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <h5 class="card-title">Kullanıcı Bilgileri</h5>
        </div>
        <dl class="row">
            <dt class="col-sm-3">Adı</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>
            <dt class="col-sm-3">Soyadı</dt>
            <dd class="col-sm-9">@Model.LastName</dd>
            <dt class="col-sm-3">Kullanıcı Rolü</dt>
            <dd class="col-sm-9">@Model.Role</dd>
            <dt class="col-sm-3">Kullanıcı Adı</dt>
            <dd class="col-sm-9">@Model.UserName</dd>
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            <dt class="col-sm-3">Kayıt Tarihi</dt>
            <dd class="col-sm-9">@Model.CreatedAt</dd>
        </dl>
    </div>

    <!-- Footer with Edit and Back to List Links -->
    <div class="card-footer bg-light d-flex justify-content-center">
        
        <div>
            <a style="padding:5px 15px;" asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary">Ana Sayfaya dön</a>
        </div>
    </div>
</div>

@model CreateCommentDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" id="contentInput" onkeyup="checkContentLength()" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary disabled-button" id="createButton" disabled  />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        function checkContentLength() {
            var contentInput = document.getElementById("contentInput");
            var createButton = document.getElementById("createButton");
            if (contentInput.value.length >= 3) {
                createButton.disabled = false;
                createButton.classList.remove("disabled-button");
            } else {
                createButton.disabled = true;
                createButton.classList.add("disabled-button");
            }
        }
    </script>
}

<style>
    .disabled-button {
        background-color: #d3d3d3; /* Light gray color */
        border-color: #d3d3d3; /* Light gray color */
        cursor: not-allowed;
    }
</style>
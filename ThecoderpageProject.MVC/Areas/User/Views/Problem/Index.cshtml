@model IEnumerable<ProblemVM>

@{
    ViewData["Title"] = "My Problems";
}

<h1 class="text-center">My Problems</h1>

<div class="container mt-4">
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Henüz problem paylaşmadınız.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var problem in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card position-relative">
                        <div class="card-body">
                            <h5 class="card-title">@problem.Title</h5>
                            <p class="card-text">@problem.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="@Url.Action("Details", "Problem", new { id = problem.Id })" class="btn btn-primary">View Details</a>
                                @if (problem.Status == ProblemStatus.Open)
                                {

                                    <form class="status-form d-inline ms-2" style="margin-right: 36px;" data-problem-id="@problem.Id">
                                        <input type="hidden" name="id" value="@problem.Id" />
                                        <select name="status" class="form-select form-select-sm w-150 p-2" style="width: 150%; ">
                                            @foreach (var status in Enum.GetValues(typeof(ProblemStatus)))
                                            {
                                                var isSelected = problem.Status == (ProblemStatus)status ? "selected" : "";
                                                <option value="@( (int)status )" isSelected>
                                                    @status
                                                </option>
                                            }
                                        </select>
                                    </form>
                                }
                                else
                                {
                                    <span class="badge  bg-success  me-2 p-2" style="padding: 10px; font-size:13px; line-height: 1.7;">
                                        Çözüm bulundu
                                    </span>

                                }

                            </div>
                            <!-- Silme butonu -->
                            <form asp-controller="Problem" asp-action="DeleteConfirmed" method="post" class="position-absolute" style="top: 10px; right: 10px;">
                                <input type="hidden" name="id" value="@problem.Id" />
                                <button type="submit" class="btn btn-link text-danger" onclick="return confirm('Bu problemi silmek istediğinize emin misiniz?');">
                                    <i class="fas fa-trash-alt"></i> <!-- Silme ikonu -->
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>


<!-- Notification message -->
<div id="notification" class="alert alert-success" style="display:none;">
    Status güncellendi.
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.status-form select').change(function () {
                var form = $(this).closest('form');
                var problemId = form.data('problem-id');
                var status = $(this).val();

                $.ajax({
                    url: '@Url.Action("Update", "Problem", new { area = "User" })',
                    type: 'POST',
                    data: {
                        id: problemId,
                        status: status
                    },
                    success: function (response) {
                        $('#notification').show().delay(3000).fadeOut();
                    },
                    error: function () {
                        alert('Status güncellenirken bir hata oluştu.');
                    }
                });
            });
        });
    </script>
}